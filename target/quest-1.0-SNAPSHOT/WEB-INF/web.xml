<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">


    <servlet>
        <servlet-name>winPage</servlet-name>
        <jsp-file>/view/Win.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>winPage</servlet-name>
        <url-pattern>/win</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>gamePage</servlet-name>
        <jsp-file>/view/Game.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>gamePage</servlet-name>
        <url-pattern>/game</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>lossPage</servlet-name>
        <jsp-file>/view/Loss.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>lossPage</servlet-name>
        <url-pattern>/loss</url-pattern>
    </servlet-mapping>

</web-app>